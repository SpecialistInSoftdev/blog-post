= bootstrap_form_for @article do |f|
  - if @article.errors.any?
    #error_explanation
      .row
        %h2.text-center
          = pluralize(@article.errors.count, "error")
          prohibited
          this article from being saved:
        %ul.text-center
          - @article.errors.full_messages.each do |msg|
            %li= msg
  .row  
    %br
      %h4.text-center
        = f.text_field :title
  .row
    %br
      %h4.text-center
        = f.text_area :text
  .row
    %p.text-center
      = f.submit  'Submit This Article',:class => "btn btn-primary"
